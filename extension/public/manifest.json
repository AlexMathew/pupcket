{
    "manifest_version": 2,
    "name": "Pawcket",
    "short_name": "Pawcket",
    "version": "0.1.0",
    "description": "Save tweets to be your Chrome new tab.",
    "icons": {
        "16": "icons/logo16.png",
        "48": "icons/logo48.png",
        "128": "icons/logo128.png"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "options_page": "options.html",
    "background": {
        "scripts": [ "background.bundle.js" ],
        "persistent": false
    },
    "page_action": {
        "default_icon": "icons/logo48.png",
        "default_title": "Pawcket",
        "default_popup": "popup.html"
    },
    "permissions": [
        "alarms",
        "storage",
        "declarativeContent",
        "tabs",
        "http://localhost:8000/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://apis.google.com; object-src 'self'"
}