{
    "manifest_version": 2,
    "name": "Pupcket",
    "short_name": "Pupcket",
    "version": "1.0.0",
    "description": "Pupcket test",
    "icons": {
        "16": "icons/logo16.png",
        "48": "icons/logo48.png",
        "128": "icons/logo128.png"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "options_page": "options.html",
    "background": {
        "scripts": ["background.bundle.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/logo48.png"
    },
    "permissions": [
        "alarms",
        "storage",
        "declarativeContent",
        "http://localhost:8000/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}